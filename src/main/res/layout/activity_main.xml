<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.m_rau.skincancerdetector.MainActivity">

    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="@string/image"/>

    <Button
        android:id="@+id/buttonPhoto"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimary"
        android:onClick="checkPermissions"
        android:text="@string/take_photo"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/loadimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/load_image" />

    <TextView
        android:id="@+id/prediction"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageViewPhoto"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="" />

    <Button
        android:id="@+id/referenceButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="0dp"
        android:onClick="onClickReference"
        android:text="@string/references"
        android:textAllCaps="true"
        android:textSize="12sp" />

</RelativeLayout>
